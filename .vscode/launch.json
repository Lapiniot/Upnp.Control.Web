{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build",
            "program": "${workspaceFolder}/Upnp.Control.Web/bin/Debug/net7.0/Upnp.Control.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Upnp.Control.Web",
            "stopAtEntry": false,
            "allowFastEvaluate": true,
            "logging": {
                "moduleLoad": false,
                "engineLogging": false,
                "threadExit": false
            },
            "serverReadyAction": {
                "action": "debugWithChrome",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_HOSTINGSTARTUPASSEMBLIES": "Microsoft.AspNetCore.SpaProxy",
                "ASPNETCORE_HTTPS_PORT": "8081"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            "osx": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_HOSTINGSTARTUPASSEMBLIES": "Microsoft.AspNetCore.SpaProxy",
                    "ASPNETCORE_HTTPS_PORT": "8081",
                    "DYLD_LIBRARY_PATH": "/opt/local/lib/openssl-3"
                }
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Docker .NET Core Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        }
    ]
}