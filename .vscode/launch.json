{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": ".NET: build",
            "program": "bin/Debug/${config:build.framework}/Upnp.Control.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Upnp.Control.Web",
            "stopAtEntry": false,
            "allowFastEvaluate": true,
            "logging": {
                "moduleLoad": false,
                "engineLogging": false,
                "threadExit": false
            },
            "serverReadyAction": {
                "action": "debugWithChrome",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_HOSTINGSTARTUPASSEMBLIES": "Microsoft.AspNetCore.SpaProxy",
                "ASPNETCORE_HTTPS_PORT": "8081"
            },
            "osx": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_HOSTINGSTARTUPASSEMBLIES": "Microsoft.AspNetCore.SpaProxy",
                    "ASPNETCORE_HTTPS_PORT": "8081",
                    "DYLD_LIBRARY_PATH": "/opt/local/lib/openssl-3"
                }
            },
            "launchSettingsProfile": "Upnp.Control.Web",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
            "externalConsole": true
        },
        {
            "args": [
                "svg-symbols"
            ],
            "name": "Gulp task",
            "program": "node_modules/gulp/bin/gulp.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
        }
    ]
}