{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "FRAMEWORK": "netcoreapp3.1",
            "CONFIG": "Release"
        }
    },
    "tasks": [
        {
            "label": "Sass Compile",
            "type": "shell",
            "options": {
                "cwd": "Web.Upnp.Control/ClientApp/src"
            },
            "command": "node-sass styles/index.scss css/index.css",
            "group": "build",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet publish -c $CONFIG",
            "type": "shell",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "deploy (remote SSH)",
            "dependsOn": [
                "publish"
            ],
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "osx": {
                "command": "rsync -r -v --delete -e ssh ./Web.Upnp.Control/bin/$CONFIG/$FRAMEWORK/publish/ ${input:remote-url}"
            }
        },
        {
            "type": "npm",
            "script": "build",
            "path": "Web.Upnp.Control/ClientApp/",
            "group": "build",
            "problemMatcher": [],
            "label": "npm: build - Web.Upnp.Control/ClientApp",
            "detail": "react-scripts build"
        },
        {
            "type": "npm",
            "script": "install",
            "path": "Web.Upnp.Control/",
            "problemMatcher": [],
            "label": "npm: install - Web.Upnp.Control",
            "detail": "install dependencies from package"
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "win10-x64",
                "osx-x64",
                "debian-arm64"
            ],
            "default": "osx-x64"
        }
    ]
}