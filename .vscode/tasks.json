{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "problemMatcher": {
        "base": "$msCompile",
        "source": "dotnet",
        "pattern": {
            "regexp": "^([^\\\\s].*)\\((\\d+,\\d+)\\):\\s+(error|warning|message)\\s+(.*):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "message": 5,
            "severity": 3,
            "code": 4
        }
    },
    "tasks": [
        {
            "label": ".NET: build",
            "detail": "Runs dotnet build task",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--tl"
            ]
        },
        {
            "label": ".NET: publish",
            "detail": "Runs dotnet publish command",
            "group": "build",
            "command": "dotnet",
            "args": [
                "publish",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--tl"
            ]
        },
        {
            "label": ".NET: publish (sc-trimmed)",
            "detail": "Runs dotnet publish --self-contained command",
            "group": "build",
            "hide": true,
            "command": "dotnet",
            "args": [
                "publish",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "--runtime=${input:rid}",
                "--self-contained",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/property:PublishTrimmed=true",
                "--tl"
            ]
        },
        {
            "label": ".NET: publish Docker image (sc-trimmed)",
            "detail": "Publishes as Docker container image (self-contained + trimmed)",
            "group": "build",
            "command": "dotnet",
            "args": [
                "publish",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "--runtime=${input:docker_rid}",
                "--self-contained",
                "-p:PublishTrimmed=true",
                "-p:PublishProfile=DefaultContainer"
            ]
        },
        {
            "label": ".NET: publish (self-contained)",
            "dependsOn": [
                ".NET: publish (sc-trimmed)"
            ],
            "type": "shell",
            "command": "du -shA \"${workspaceFolder}/artifacts/publish/Upnp.Control.Web/release_${input:rid}/\"",
            "problemMatcher": []
        },
        {
            "label": ".NET: deploy (remote SSH)",
            "detail": "Deploys to remote server via rsync over SSH",
            "group": "build",
            "dependsOn": [
                ".NET: publish (self-contained)"
            ],
            "command": "rsync",
            "type": "shell",
            "args": [
                "--rsync-path=\"sudo -u upnp-dashboard rsync\"",
                "--recursive",
                "--verbose",
                "--progress",
                "--delete",
                "--filter=\"protect **/config\"",
                "--filter=\"protect **/data\"",
                "--filter=\"protect **/appsettings.Production*.json\"",
                "--filter=\"protect **/*.service\"",
                "--exclude=\"**/.DS_Store\"",
                "--rsh=ssh",
                "\"${workspaceFolder}/artifacts/publish/Upnp.Control.Web/release_${input:rid}/\"",
                "${input:remote-url}"
            ]
        },
        {
            "label": "gulp: compile SCSS files",
            "detail": "Compiles *.scss files to *.css files",
            "group": "build",
            "type": "gulp",
            "task": "scss",
            "options": {
                "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "label": "gulp: build SVG sprites",
            "detail": "Merges *.svg files to symbols and stack files",
            "group": "build",
            "type": "gulp",
            "task": "'svg-symbols' 'svg-stack'",
            "options": {
                "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "label": "tsc: build - Upnp.Control.Web/ClientApp/tsconfig.json",
            "type": "typescript",
            "tsconfig": "Upnp.Control.Web/ClientApp/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "type": "npm",
            "script": "build",
            "path": "Upnp.Control.Web/ClientApp",
            "group": "build",
            "problemMatcher": [],
            "label": "npm: build - Upnp.Control.Web/ClientApp",
            "detail": "tsc && vite build"
        },
        {
            "type": "npm",
            "script": "lint",
            "path": "Upnp.Control.Web/ClientApp",
            "problemMatcher": [
                "$eslint-compact"
            ],
            "label": "npm: lint - Upnp.Control.Web/ClientApp",
            "detail": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "win-x64",
                "osx-x64",
                "linux-x64",
                "linux-arm64"
            ],
            "default": "osx-x64"
        },
        {
            "id": "docker_rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "linux-x64",
                "linux-arm64",
                "linux-musl-x64",
                "linux-musl-arm64"
            ]
        }
    ]
}