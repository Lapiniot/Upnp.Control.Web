{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "FRAMEWORK": "netcoreapp3.1",
            "CONFIGURATION": "Release"
        }
    },
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet publish -c $CONFIGURATION",
            "type": "shell",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "publish (self-contained)",
            "command": "dotnet publish -c $CONFIGURATION -r $RUNTIME",
            "type": "shell",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "env": {
                    "RUNTIME": "${input:rid}"
                }
            }
        },
        {
            "label": "deploy (remote SSH)",
            "dependsOn": [
                "publish"
            ],
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "osx": {
                "command": "rsync -r -v --delete -e ssh ./Web.Upnp.Control/bin/$CONFIGURATION/$FRAMEWORK/publish/ ${input:remote-url}"
            }
        },
        {
            "label": "deploy self-contained (remote SSH)",
            "type": "shell",
            "problemMatcher": [],
            "dependsOn": [
                "publish (self-contained)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "osx": {
                "command": "rsync -r -v --delete -e ssh ./Web.Upnp.Control/bin/Release/netcoreapp3.1/${input:rid}/publish/ ${input:remote-url}"
            }
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "win10-x64",
                "osx-x64",
                "debian-arm64"
            ],
            "default": "osx-x64"
        }
    ]
}