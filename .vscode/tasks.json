{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "FRAMEWORK": "net6.0",
            "CONFIG": "Release"
        }
    },
    "tasks": [
        {
            "label": "Build",
            "detail": "Runs dotnet build task",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "--configuration=Release",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish (self-contained)",
            "detail": "Runs dotnet publish command",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "--configuration=\"$CONFIG\"",
                "--runtime=${input:rid}",
                "--self-contained",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/property:PublishTrimmed=true"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Deploy (remote SSH)",
            "detail": "Starts deployment to remote server via rsync over SSH",
            "dependsOn": [
                "Publish (self-contained)"
            ],
            "type": "shell",
            "problemMatcher": [],
            "command": "rsync",
            "args": [
                "--rsync-path",
                "sudo -u upnp-dashboard rsync",
                "--recursive",
                "--verbose",
                "--progress",
                "--delete",
                "--filter=\"protect **/config\"",
                "--filter=\"protect **/data\"",
                "--filter=\"protect **/appsettings.Production*.json\"",
                "--filter=\"protect **/*.service\"",
                "--rsh=ssh",
                "\"${workspaceFolder}/Upnp.Control.Web/bin/$CONFIG/$FRAMEWORK/${input:rid}/publish/\"",
                "${input:remote-url}"
            ]
        },
        {
            "label": "Watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Gulp Compile",
            "detail": "Compiles *.scss files to *.css files",
            "type": "gulp",
            "task": "sass",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "label": "Gulp Watch SCSS",
            "detail": "Starts *.scss files modification background watch task",
            "type": "gulp",
            "task": "watch",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "type": "docker-build",
            "label": "docker-build: debug",
            "dockerBuild": {
                "tag": "upnp-dashboard:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/Upnp.Control.Web/Docker/Dockerfile",
                "context": "${workspaceFolder}",
                "labels": {
                    "includeDefaults": false
                },
                "buildArgs": {
                    "NET_VERSION": "6.0"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build: release",
            "dockerBuild": {
                "tag": "upnp-dashboard:latest",
                "dockerfile": "${workspaceFolder}/Upnp.Control.Web/Docker/Dockerfile",
                "context": "${workspaceFolder}",
                "labels": {
                    "includeDefaults": false
                },
                "buildArgs": {
                    "NET_VERSION": "6.0"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build: release, self-contained",
            "dockerBuild": {
                "tag": "upnp-dashboard:latest-scd",
                "dockerfile": "${workspaceFolder}/Upnp.Control.Web/Docker/Dockerfile.SCD",
                "context": "${workspaceFolder}",
                "labels": {
                    "includeDefaults": false
                },
                "buildArgs": {
                    "NET_VERSION": "6.0"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build-outside: release, self-contained",
            "dockerBuild": {
                "tag": "upnp-dashboard:latest-scd-${input:rid}",
                "dockerfile": "${workspaceFolder}/Upnp.Control.Web/Docker/${input:rid}/Dockerfile",
                "context": "${workspaceFolder}/Upnp.Control.Web/bin/Release/net6.0/${input:rid}/publish",
                "labels": {
                    "includeDefaults": false
                },
                "buildArgs": {
                    "NET_VERSION": "6.0"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            },
            "dependsOn": [
                "Publish (self-contained)"
            ]
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": [
                "docker-build-outside: release, self-contained"
            ],
            "dockerRun": {
                "image": "upnp-dashboard:latest-scd-${input:rid}",
                "volumes": [
                    {
                        "containerPath": "/app/config",
                        "localPath": "upnp-dashboard-config"
                    },
                    {
                        "containerPath": "/app/data",
                        "localPath": "upnp-dashboard-data"
                    }
                ],
                "ports": [
                    {
                        "hostPort": 8080,
                        "containerPort": 8080,
                        "protocol": "tcp"
                    },
                    {
                        "hostPort": 8081,
                        "containerPort": 8081,
                        "protocol": "tcp"
                    }
                ]
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "type": "npm",
            "script": "build",
            "path": "Upnp.Control.Web/ClientApp/",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "label": "npm: build - Upnp.Control.Web/ClientApp",
            "detail": "react-scripts build"
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "win10-x64",
                "osx-x64",
                "ubuntu-x64",
                "ubuntu-arm",
                "ubuntu-arm64",
                "debian-x64",
                "debian-arm",
                "debian-arm64",
                "alpine-x64",
                "alpine-arm64"
            ],
            "default": "osx-x64"
        }
    ]
}