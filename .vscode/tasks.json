{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "FRAMEWORK": "net5.0",
            "CONFIG": "Release"
        }
    },
    "tasks": [
        {
            "label": "Build",
            "detail": "Runs dotnet build task",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "${workspaceFolder}/Web.Upnp.Control/Web.Upnp.Control.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Web.Upnp.Control/Web.Upnp.Control.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish (self-contained)",
            "detail": "Runs dotnet publish command",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "${workspaceFolder}/Web.Upnp.Control/Web.Upnp.Control.csproj",
                "--configuration=\"$CONFIG\"",
                "--runtime=\"$RUNTIMEID\"",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/property:PublishTrimmed=true"
            ],
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CONFIG": "Release",
                    "RUNTIMEID": "${input:rid}"
                }
            }
        },
        {
            "label": "Deploy (remote SSH)",
            "detail": "Starts deployment to remote server via rsync over SSH",
            "dependsOn": [
                "Publish (self-contained)"
            ],
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "FRAMEWORK": "net5.0",
                    "CONFIG": "Release",
                    "RUNTIMEID": "${input:rid}"
                }
            },
            "command": "rsync",
            "args": [
                "--rsync-path",
                "sudo -u upnp-dashboard rsync",
                "--recursive",
                "--verbose",
                "--progress",
                "--delete",
                "--filter=\"protect *.crt\"",
                "--filter=\"protect *.key\"",
                "--filter=\"protect *.db3\"",
                "--filter=\"protect appsettings.Production*.json\"",
                "--filter=\"protect appsettings.Secrets.json\"",
                "--rsh=ssh",
                "./Web.Upnp.Control/bin/$CONFIG/$FRAMEWORK/$RUNTIMEID/publish/",
                "${input:remote-url}"
            ]
        },
        {
            "label": "Watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Web.Upnp.Control/Web.Upnp.Control.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "npm: install - Web.Upnp.Control",
            "detail": "install dependencies from package",
            "type": "npm",
            "script": "install",
            "path": "Web.Upnp.Control/",
            "problemMatcher": []
        },
        {
            "label": "Gulp Compile",
            "detail": "Compiles *.scss files to *.css files",
            "type": "gulp",
            "task": "sass",
            "group": "build",
            "options": {
                "cwd": "Web.Upnp.Control/"
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "label": "Gulp Watch SCSS",
            "detail": "Starts *.scss files modification background watch task",
            "type": "gulp",
            "task": "watch",
            "isBackground": true,
            "options": {
                "cwd": "Web.Upnp.Control/"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "type": "docker-build",
            "label": "docker-build: debug",
            "dockerBuild": {
                "tag": "webupnpcontrol:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/Web.Upnp.Control/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Web.Upnp.Control/Web.Upnp.Control.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build: release",
            "dockerBuild": {
                "tag": "webupnpcontrol:latest",
                "dockerfile": "${workspaceFolder}/Web.Upnp.Control/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true,
                "labels": {
                    "includeDefaults": false
                },
                "customOptions": "--label \"Production ready build (Framework dependent deployment)\""
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Web.Upnp.Control/Web.Upnp.Control.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/Web.Upnp.Control/Web.Upnp.Control.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": [
                "docker-build: release"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/Web.Upnp.Control/Web.Upnp.Control.csproj"
            }
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "win10-x64",
                "osx-x64",
                "ubuntu-x64",
                "debian-x64",
                "ubuntu-arm64",
                "debian-arm64"
            ],
            "default": "osx-x64"
        }
    ]
}