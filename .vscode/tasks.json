{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": ".NET: build",
            "detail": "Runs dotnet build task",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": ".NET: publish",
            "detail": "Runs dotnet publish command",
            "group": "build",
            "command": "dotnet",
            "args": [
                "publish",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "--configuration=${config:publish.configuration}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": ".NET: publish (sc-trimmed)",
            "detail": "Runs dotnet publish --self-contained command",
            "group": "build",
            "hide": true,
            "command": "dotnet",
            "args": [
                "publish",
                "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "--configuration=${config:publish.configuration}",
                "--runtime=${input:rid}",
                "--self-contained",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/property:PublishTrimmed=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": ".NET: publish (self-contained)",
            "dependsOn": [
                ".NET: publish (sc-trimmed)"
            ],
            "type": "shell",
            "command": "du -shA \"${workspaceFolder}/artifacts/publish/Upnp.Control.Web/${config:publish.configuration}_${input:rid}/\"",
            "problemMatcher": []
        },
        {
            "label": ".NET: deploy (remote SSH)",
            "detail": "Deploys to remote server via rsync over SSH",
            "group": "build",
            "dependsOn": [
                ".NET: publish (self-contained)"
            ],
            "command": "rsync",
            "type": "shell",
            "args": [
                "--rsync-path=\"sudo -u upnp-dashboard rsync\"",
                "--recursive",
                "--verbose",
                "--progress",
                "--delete",
                "--filter=\"protect **/config\"",
                "--filter=\"protect **/data\"",
                "--filter=\"protect **/appsettings.Production*.json\"",
                "--filter=\"protect **/*.service\"",
                "--exclude=\"**/.DS_Store\"",
                "--rsh=ssh",
                "\"${workspaceFolder}/artifacts/publish/Upnp.Control.Web/${config:publish.configuration}_${input:rid}/\"",
                "${input:remote-url}"
            ]
        },
        {
            "label": "gulp: compile SCSS files",
            "detail": "Compiles *.scss files to *.css files",
            "group": "build",
            "type": "gulp",
            "task": "scss",
            "options": {
                "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "label": "gulp: build SVG sprites",
            "detail": "Merges *.svg files to symbols and stack files",
            "group": "build",
            "type": "gulp",
            "task": "'svg-symbols' 'svg-stack'",
            "options": {
                "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "label": "gulp: watch SCSS files for changes",
            "detail": "Starts *.scss files modification background watch task",
            "group": "build",
            "type": "gulp",
            "task": "watch-scss",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "label": "docker-build: debug",
            "type": "docker-build",
            "dockerBuild": {
                "tag": "upnp-dashboard:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/Upnp.Control.Web/Docker/Dockerfile",
                "context": "${workspaceFolder}",
                "labels": {
                    "includeDefaults": false
                },
                "buildArgs": {
                    "NET_VERSION": "7.0"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "label": "docker-build: release",
            "type": "docker-build",
            "dockerBuild": {
                "tag": "upnp-dashboard:latest",
                "dockerfile": "${workspaceFolder}/Upnp.Control.Web/Docker/Dockerfile",
                "context": "${workspaceFolder}",
                "labels": {
                    "includeDefaults": false
                },
                "buildArgs": {
                    "NET_VERSION": "7.0"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "label": "docker-build: release, self-contained",
            "type": "docker-build",
            "dockerBuild": {
                "tag": "upnp-dashboard:latest-scd",
                "dockerfile": "${workspaceFolder}/Upnp.Control.Web/Docker/Dockerfile.SCD",
                "context": "${workspaceFolder}",
                "labels": {
                    "includeDefaults": false
                },
                "buildArgs": {
                    "NET_VERSION": "7.0"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "label": "docker-build-outside: release, self-contained",
            "type": "docker-build",
            "dependsOn": [
                ".NET: publish (self-contained)"
            ],
            "dockerBuild": {
                "tag": "upnp-dashboard:latest-scd-${input:rid}",
                "dockerfile": "${workspaceFolder}/Upnp.Control.Web/Docker/${input:rid}/Dockerfile",
                "context": "${workspaceFolder}/artifacts/publish/Upnp.Control.Web/${config:publish.configuration}_${input:rid}/",
                "labels": {
                    "includeDefaults": false
                },
                "buildArgs": {
                    "NET_VERSION": "7.0"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "label": "docker-run: debug",
            "type": "docker-run",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj",
                "enableDebugging": true
            }
        },
        {
            "label": "docker-run: release",
            "type": "docker-run",
            "dependsOn": [
                "docker-build-outside: release, self-contained"
            ],
            "dockerRun": {
                "image": "upnp-dashboard:latest-scd-${input:rid}",
                "volumes": [
                    {
                        "containerPath": "/app/config",
                        "localPath": "upnp-dashboard-config"
                    },
                    {
                        "containerPath": "/app/data",
                        "localPath": "upnp-dashboard-data"
                    }
                ],
                "ports": [
                    {
                        "hostPort": 8080,
                        "containerPort": 8080,
                        "protocol": "tcp"
                    },
                    {
                        "hostPort": 8081,
                        "containerPort": 8081,
                        "protocol": "tcp"
                    }
                ]
            },
            "netCore": {
                "appProject": "${workspaceFolder}/Upnp.Control.Web/Upnp.Control.Web.csproj"
            }
        },
        {
            "label": "npm: build - Upnp.Control.Web/ClientApp",
            "detail": "react-scripts build",
            "group": "build",
            "type": "npm",
            "script": "build",
            "path": "Upnp.Control.Web/ClientApp",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "npm: install - Upnp.Control.Web/ClientApp",
            "detail": "install dependencies from package",
            "type": "npm",
            "script": "install",
            "path": "Upnp.Control.Web/ClientApp"
        },
        {
            "label": "npm: start - Upnp.Control.Web/ClientApp",
            "detail": "rimraf ./build && react-scripts start",
            "type": "npm",
            "script": "start",
            "path": "Upnp.Control.Web/ClientApp",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "npm: lint - Upnp.Control.Web/ClientApp",
            "detail": "eslint ./src/",
            "type": "npm",
            "script": "lint",
            "path": "Upnp.Control.Web/ClientApp",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "tsc: build - Upnp.Control.Web/ClientApp/tsconfig.json",
            "type": "typescript",
            "tsconfig": "Upnp.Control.Web/ClientApp/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "npm: build service-worker.js",
            "detail": "react-scripts build & cp ./build/service-worker.* ./public/",
            "type": "shell",
            "command": "cp",
            "args": [
                "./build/service-worker.*",
                "./public/"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Upnp.Control.Web/ClientApp"
            },
            "dependsOn": [
                "npm: build - Upnp.Control.Web/ClientApp"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "win-x64",
                "osx-x64",
                "linux-x64",
                "linux-arm64"
            ],
            "default": "osx-x64"
        }
    ]
}