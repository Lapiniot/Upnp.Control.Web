{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "FRAMEWORK": "net5.0",
            "CONFIG": "Release"
        }
    },
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "detail": "Runs dotnet build task",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "command": "dotnet publish -c $CONFIG",
            "detail": "Runs dotnet publish command",
            "type": "shell",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Publish (self-contained)",
            "command": "dotnet publish -c $CONFIG -r $RUNTIMEID",
            "detail": "Runs dotnet publish command",
            "type": "shell",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CONFIG": "Release",
                    "RUNTIMEID": "${input:rid}"
                }
            },
        },
        {
            "label": "Deploy (remote SSH)",
            "detail": "Starts deployment to remote server via rsync over SSH",
            "dependsOn": [
                "Publish (self-contained)"
            ],
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "FRAMEWORK": "net5.0",
                    "CONFIG": "Release",
                    "RUNTIMEID": "${input:rid}"
                }
            },
            "command": "rsync",
            "args": [
                "--rsync-path",
                "sudo -u upnp-dashboard rsync",
                "--recursive",
                "--verbose",
                "--progress",
                "--delete",
                "--filter=\"protect *.crt\"",
                "--filter=\"protect *.key\"",
                "--rsh=ssh",
                "./Web.Upnp.Control/bin/$CONFIG/$FRAMEWORK/$RUNTIMEID/publish/",
                "${input:remote-url}"
            ]
        },
        {
            "label": "npm: install - Web.Upnp.Control",
            "detail": "install dependencies from package",
            "type": "npm",
            "script": "install",
            "path": "Web.Upnp.Control/",
            "problemMatcher": []
        },
        {
            "label": "Gulp Compile",
            "detail": "Compiles *.scss files to *.css files",
            "type": "gulp",
            "task": "sass",
            "group": "build",
            "options": {
                "cwd": "Web.Upnp.Control/"
            },
            "problemMatcher": "$gulp-tsc"
        },
        {
            "label": "Gulp Watch SCSS",
            "detail": "Starts *.scss files modification background watch task",
            "type": "gulp",
            "task": "watch",
            "isBackground": true,
            "options": {
                "cwd": "Web.Upnp.Control/"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gulp-tsc"
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "win10-x64",
                "osx-x64",
                "ubuntu-x64",
                "debian-x64",
                "ubuntu-arm64",
                "debian-arm64"
            ],
            "default": "osx-x64"
        }
    ]
}