{
    "compilerOptions": {
        "target": "ES2020",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules/**/*.*"
    ]
}