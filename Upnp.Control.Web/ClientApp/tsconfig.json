{
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": false,
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src",
        "gulpfile.ts/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*.*"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "NodeNext"
        }
    }
}